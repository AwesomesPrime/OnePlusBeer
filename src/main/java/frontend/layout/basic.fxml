<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<SplitPane fx:controller="frontend.layout.LayoutController" dividerPositions="0.25" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <items>
        <GridPane fx:id="menuPane" vgap="25.0" minWidth="125" maxWidth="125">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label fx:id="username"     styleClass="username"                                       GridPane.rowIndex="1" />
                <Label fx:id="menuLogin"    styleClass="menuLabel"  onMouseClicked="#openLogin"         GridPane.rowIndex="2"   text="Home"/>
                <Label fx:id="menuEmployee" styleClass="menuLabel"  onMouseClicked="#openEmployeeList"  GridPane.rowIndex="3"   text="Mitarbeiter" />
                <Label fx:id="menuEvent"    styleClass="menuLabel"  onMouseClicked="#openEventList"     GridPane.rowIndex="4"   text="Veranstaltungen" />
            </children>
        </GridPane>
        <AnchorPane fx:id="currentPane">
            <!--Right here the different Panes are shown-->
        </AnchorPane>
    </items>
</SplitPane>
