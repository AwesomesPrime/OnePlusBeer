<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<ScrollPane fx:id="standPane" fitToHeight="true" fitToWidth="true" styleClass="innerPane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.stand.StandListController">
    <content>
        <GridPane alignment="CENTER" vgap="25.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="50" />
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" percentWidth="50" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Stände" styleClass="headline" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
                <JFXTextField fx:id="txtSearch" maxWidth="-Infinity" promptText="Suchen" GridPane.rowIndex="1" />
                <GridPane maxWidth="-Infinity" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.hgrow="NEVER" GridPane.rowIndex="1" GridPane.vgrow="NEVER">
                    <FontAwesomeIconView fx:id="addStand" glyphName="PLUS" glyphStyle="-fx-fill: #444444" onMouseClicked="#addStand" size="22px" styleClass="cursorHand" text="" GridPane.columnIndex="0">
                    <GridPane.margin>
                        <Insets right="20" />
                    </GridPane.margin>
                    </FontAwesomeIconView>
                    <FontAwesomeIconView fx:id="deleteStand" glyphName="MINUS" glyphStyle="-fx-fill: #444444" onMouseClicked="#deleteStand" size="22px" styleClass="cursorHand" GridPane.columnIndex="1" />
               <columnConstraints>
                  <ColumnConstraints maxWidth="-Infinity" />
                  <ColumnConstraints fillWidth="false" halignment="RIGHT" maxWidth="-Infinity" minWidth="-Infinity" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
                <TableView fx:id="tableView" onMouseClicked="#editStand" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                    <columns>
                        <TableColumn fx:id="colID" editable="false" text="ID" />
                        <TableColumn fx:id="colName" editable="false" text="Name" />
                        <TableColumn fx:id="colStandDescription" editable="false" text="Beschreibung" />
                    </columns>
                </TableView>
            </children>
        </GridPane>
    </content>
</ScrollPane>
